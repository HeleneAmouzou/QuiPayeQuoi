{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} > Liste des dépenses
{% endblock %}

{% block body %}
    <h1>Groupe : {{ group.name }}</h2>
    <h2 class="mt-4">Liste des dépenses</h2>
    <div class="container tbl-container col-10 col-sm-10 col-md-12 col-lg-12 col-xl-12 col-xxl-12">
        <div class="row tbl-fixed table-responsive">
            <table class="mt-4 table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Nom</th>
                        <th scope="col">Payé par</th>
                        <th scope="col">Date</th>
                        <th scope="col">Montant</th>
                        <th scope="col">Participants</th>
                    </tr>
                </thead>
                <tbody>
                    {% for expense in group.expensesOfTheGroup|sort((b,a) => a.date <=> b.date) %}
                        <tr>
                            <td cope="row">{{ expense.name }}</td>
                            <td>{{ expense.payer.name }}</td>
                            <td>{{ expense.date|date('d/m/Y') }}</td>
                            <td>{{ expense.amount|format_currency }}</td>
                            <td class="d-md-none">{{ expense.participants|length }}</td>
                            <td class="d-none d-md-block">
                            {% for participant in expense.participants %}
                                {{ participant }}
                            {% endfor %}
                            </td>
                        </tr>
                    {% else %}
                        <p>Ce groupe n'a pas encore de dépense.</p>
                    {% endfor %}
                </tbody>
            </table>
            <div class="col-md-12 text-center">
                <a href="{{ path('expense_add') }}" class="btn btn-primary">Ajouter une dépense</a>
                <a href="#" class="btn btn-primary">Afficher le bilan</a>
                <a href="#" class="btn btn-primary">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
