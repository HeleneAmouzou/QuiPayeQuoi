{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} > Bilan du groupe
{% endblock %}

{% block body %}
    <h2>Groupe : {{ group.name }}</h2>
    <h2>Balance</h2>
    <div>
        <table>
            <tr>
                <th>Membre</th>
                <th>Balance</th>
            </tr>
            {% for memberName, memberBalance in balance %}
                <tr>
                    <td>{{ memberName }}</td>
                    <td>{{ (memberBalance|round(0,'common'))|format_currency }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
    <div>
        <a href="#">Retour</a>
    </div>
{% endblock %}
